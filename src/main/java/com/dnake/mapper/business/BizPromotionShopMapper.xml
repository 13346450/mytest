<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dnake.mapper.business.BizPromotionShopMapper">
	<resultMap type="BizPromotionShop" id="bizPromotionShopMap">
		<id column="id_key" property="idKey" />
		<result column="promotion_id" property="promotionId" />
		<result column="shop_id" property="shopId" />
		<result column="community_id" property="communityId" />
	</resultMap>

	<resultMap type="BizPromotionShopVO" id="bizPromotionShopList">
		<id column="id_key" property="idKey" />
		<result column="promotion_id" property="promotionId" />
		<result column="shop_id" property="shopId" />
		<result column="community_id" property="communityId" />


	</resultMap>

	<insert id="insert" parameterType="BizPromotionShop"
		useGeneratedKeys="true" keyProperty="idKey">
		insert into biz_promotion_shop(
		id_key,promotion_id,shop_id,community_id)
		values(
		#{idKey},#{promotionId},#{shopId},#{communityId})
	</insert>

	<delete id="delete" parameterType="java.lang.Long">
		delete from biz_promotion_shop where id_key=#{idKey}
	</delete>

	<update id="update" parameterType="BizPromotionShop">
		update biz_promotion_shop
		<set>
			<if test='promotionId!= null and promotionId!=""'>
				promotion_id=#{promotionId},
			</if>
			<if test='shopId!= null and shopId!=""'>
				shop_id=#{shopId},
			</if>
			<if test='communityId!= null and communityId!=""'>
				community_id=#{communityId},
			</if>
		</set>
		where id_key= #{idKey}
	</update>

	<select id="queryByIdkey" resultMap="bizPromotionShopMap"
		parameterType="java.lang.Long">
		select * from biz_promotion_shop where id_key=#{idKey}
	</select>
	<select id="queryByPromotionId" resultMap="bizPromotionShopMap"
		parameterType="java.lang.Long">
		select * from biz_promotion_shop where promotion_id=#{promotionId}
	</select>

	<select id="queryPage" resultMap="bizPromotionShopList"
		parameterType="Page">
		null
		<!--<where> chg_dt between #{params.startDatetime} and #{params.endDatetime} 
			<if test='params.name != null and params.name != ""'> and br.name=#{params.name} 
			</if> </where> -->
	</select>

	<delete id="deleteMulti" parameterType="java.util.Map">
		delete from biz_promotion_shop where id_key in
		<foreach item="item" index="index" collection="deviceIdin"
			open="(" separator="," close=")">${item}</foreach>
	</delete>

	<insert id="insertMulti" parameterType="java.util.List">
		insert into biz_promotion_shop(
		promotion_id,shop_id,community_id)
		values
		<foreach collection="list" item="item" separator="," index="index">
			(#{item.promotionId},#{item.shopId},#{item.communityId})
		</foreach>
	</insert>
	
	
</mapper>
